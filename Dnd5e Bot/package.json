{
  "name": "dnd5e-bot",
  "version": "1.0.0",
  "description": "A dnd bot for managing and playing D&D 5e campaigns",
  "author": "Stephen Bayne",
  "dependencies": {
    "@azure/storage-blob": "^12.0.2",
    "discord.js": "^11.5.1",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/chai": "^4.2.7",
    "@types/mocha": "^5.2.7",
    "@types/node": "^13.1.6",
    "chai": "^4.2.0",
    "copy": "^0.3.2",
    "mocha": "^7.0.0",
    "rimraf": "^3.0.0",
    "ts-node": "^8.6.2",
    "typemoq": "^2.1.0",
    "typescript": "^3.7.4"
  },
  "scripts": {
    "build": "tsc && copy settings.json dist",
    "dockerbuild": "tsc && copy settings.json dist && docker build . -t sythiri-dnd-bot",
    "clean": "rimraf dist",
    "test": "mocha -r ts-node/register tests/**/*.spec.ts",
    "start": "tsc && copy settings.json dist && node ./dist/Main.js",
    "startdocker": "docker run -d -it --name dndbot sythiri-dnd-bot:latest",
    "watch": "tsc -w"
  }
}
